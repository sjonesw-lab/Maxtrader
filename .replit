modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "libyaml", "pkg-config", "qhull", "tcl", "tk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dashboard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "auto-trader"

[[workflows.workflow]]
name = "dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python dashboard/app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "auto-trader"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python engine/auto_trader.py"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33139
externalPort = 3000

[[ports]]
localPort = 41197
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["python", "dashboard/app.py"]
